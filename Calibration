import cv2
import numpy as np
import glob

# ì²´ì»¤ë³´ë“œ íŒ¨í„´ í¬ê¸° (ì˜ˆ: 9x6)
CHECKERBOARD = (9, 6)

# 3D ì¢Œí‘œ ì„¤ì • (ê¸°ì¤€ ì¢Œí‘œ)
objp = np.zeros((CHECKERBOARD[0] * CHECKERBOARD[1], 3), np.float32)
objp[:, :2] = np.mgrid[0:CHECKERBOARD[0], 0:CHECKERBOARD[1]].T.reshape(-1, 2)

# ì €ì¥í•  ë¦¬ìŠ¤íŠ¸
objpoints = []  # ì‹¤ì œ 3D ì¢Œí‘œ
imgpoints = []  # 2D ì´ë¯¸ì§€ ì¢Œí‘œ

# ìº˜ë¦¬ë¸Œë ˆì´ì…˜í•  ì´ë¯¸ì§€ë“¤ ë¶ˆëŸ¬ì˜¤ê¸°
images = glob.glob('*.jpg')  # ìº˜ë¦¬ë¸Œë ˆì´ì…˜ ì´ë¯¸ì§€ í´ë”

for fname in images:
    img = cv2.imread(fname)
    gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

    # ì²´ì»¤ë³´ë“œ ì½”ë„ˆ ì°¾ê¸°
    ret, corners = cv2.findChessboardCorners(gray, CHECKERBOARD, None)

    if ret:
        objpoints.append(objp)
        imgpoints.append(corners)

# ì¹´ë©”ë¼ ìº˜ë¦¬ë¸Œë ˆì´ì…˜ ì‹¤í–‰
ret, camera_matrix, dist_coeffs, rvecs, tvecs = cv2.calibrateCamera(objpoints, imgpoints, gray.shape[::-1], None, None)

# ê²°ê³¼ ì¶œë ¥
print("Camera Matrix:\n", camera_matrix)
print("Distortion Coefficients:\n", dist_coeffs)

# ğŸ”¹ ìº˜ë¦¬ë¸Œë ˆì´ì…˜ ì ìš© í›„, ë³´ì •ëœ ì´ë¯¸ì§€ ìƒì„± (ì²´ì»¤ë³´ë“œ ì„  í‘œì‹œ í¬í•¨)
for idx, fname in enumerate(images):
    img = cv2.imread(fname)
    gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

    # ë³´ì •ëœ ì¹´ë©”ë¼ í–‰ë ¬ ê³„ì‚°
    h, w = img.shape[:2]
    new_camera_matrix, roi = cv2.getOptimalNewCameraMatrix(camera_matrix, dist_coeffs, (w, h), 1, (w, h))

    # ğŸ”¹ ì™œê³¡ ë³´ì • ì ìš©
    undistorted_img = cv2.undistort(img, camera_matrix, dist_coeffs, None, new_camera_matrix)

    # ğŸ”¹ ì²´ì»¤ë³´ë“œ ì½”ë„ˆ ë‹¤ì‹œ ì°¾ê¸° (ë³´ì •ëœ ì´ë¯¸ì§€ì—ì„œ)
    ret, corners = cv2.findChessboardCorners(cv2.cvtColor(undistorted_img, cv2.COLOR_BGR2GRAY), CHECKERBOARD, None)

    if ret:
        # ğŸ”¹ ë³´ì •ëœ ì´ë¯¸ì§€ì— ì²´ì»¤ë³´ë“œ ì½”ë„ˆ ì„  ê·¸ë¦¬ê¸°
        cv2.drawChessboardCorners(undistorted_img, CHECKERBOARD, corners, ret)

    # ê²°ê³¼ ì €ì¥
    output_filename = f"undistorted_corners_{idx}.jpg"
    cv2.imwrite(output_filename, undistorted_img)
    print(f"ğŸ“¸ ë³´ì •ëœ ì²´ì»¤ë³´ë“œ ì´ë¯¸ì§€ ì €ì¥: {output_filename}")

    # ë³´ì •ëœ ì´ë¯¸ì§€ ì‹œê°í™”
    cv2.imshow('Undistorted Image with Chessboard', undistorted_img)
    cv2.waitKey(500)

cv2.destroyAllWindows()
